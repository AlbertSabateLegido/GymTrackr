<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvRepetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textColor="@color/black"
        android:text="Repetitions:"/>

    <EditText
        android:id="@+id/etRepetitions"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvRepetitions"
        android:layout_alignBaseline="@id/tvRepetitions"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:inputType="number"/>


    <TextView
        android:id="@+id/tvSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRepetitions"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/font_size"
        android:textColor="@color/black"
        android:text="Series:"/>

    <EditText
        android:id="@+id/etSeries"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/etRepetitions"
        android:layout_alignBaseline="@id/tvSeries"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeries"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/font_size"
        android:textColor="@color/black"
        android:text="Weight:"/>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvWeight"
        android:layout_alignStart="@id/etSeries"/>

    <Space
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/bCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/spacer"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/font_size"
        android:text="Cancel"/>

    <Button
        android:id="@+id/bAccept"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/spacer"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/font_size"
        android:text="Accept"/>


</RelativeLayout>